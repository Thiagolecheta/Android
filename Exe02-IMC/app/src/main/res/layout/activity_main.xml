<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ti.calculadora1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="Calculadora IMC"
        android:textAlignment="center"
        android:textColor="#3F884A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtPeso1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o Peso"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Informe a altura"
        android:id="@+id/txtAltura1"/>

    <Button
        android:id="@+id/btnCalcular"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"
        android:text="Calcular IMC"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/labelIMC"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_margin="10sp"
        android:layout_marginBottom="5sp"
        android:text="Resultado"
        android:textAlignment="center"
        android:textColor="#97CC1616"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/labelSituacao"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_margin="10sp"
        android:layout_marginBottom="5sp"
        android:text="Situação"
        android:textAlignment="center"
        android:textColor="#97CC1616"
        android:textSize="18sp" />

</LinearLayout>